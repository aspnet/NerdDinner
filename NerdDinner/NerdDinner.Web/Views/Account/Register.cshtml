@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container main-view">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h4>@ViewBag.Title</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 bordered">
            <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
                <h4>Create a new account</h4>
                <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                <div class="form-group">
                    <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11">
                        <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11">
                        <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11">
                        <input type="submit" value="Register" class="btn btn-default" />
                        <span class="login-display">or <a class="link" asp-action="login">Log On</a></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
